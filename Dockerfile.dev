# Development Dockerfile for React application
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies for development
RUN apk add --no-cache git

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
# Add libc6-compat to avoid esbuild ETXTBSY issues on Alpine
RUN apk add --no-cache libc6-compat && npm install

# Copy source code
COPY . .

# Expose port 3000
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]
